---
const { title = "Moose Apps" } = Astro.props;
import "../styles.css";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/images/logo_mooseapps.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="text-gray-800 font-inter bg-gray-50">
    <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-200">
      <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <img src="/images/logo_mooseapps.png" alt="Moose Apps Logo" class="h-9 w-9" />
          <span class="text-2xl font-bold text-gray-800">
            Moose Apps<sup class="text-sm text-gray-500">&copy;</sup>
          </span>
        </div>
        <nav class="hidden md:flex items-center space-x-8">
          <a href="/#apps" class="text-gray-600 hover:text-brand-dark transition">Our Apps</a>
          <a href="/#principles" class="text-gray-600 hover:text-brand-dark transition">Principles</a>
          <a href="/#contact" class="text-gray-600 hover:text-brand-dark transition">Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

  </body>
</html>


