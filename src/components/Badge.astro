---
const { type } = Astro.props;

const colors = {
  New: "bg-green-100 text-green-700",
  Bugfix: "bg-yellow-100 text-yellow-700",
  Fixed: "bg-red-100 text-red-700",
  Improved: "bg-blue-100 text-blue-700",
};

const classes = colors[type] || "bg-gray-100 text-gray-700";
---

<span class={`px-2 py-0.5 rounded text-sm font-semibold ${classes}`}>
  [{type}]
</span>
