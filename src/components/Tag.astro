---
const { type, children } = Astro.props;

const styles = {
  new: "bg-green-100 text-green-800 px-2 py-0.5 rounded text-xs font-semibold",
  improvement: "bg-blue-100 text-blue-800 px-2 py-0.5 rounded text-xs font-semibold",
  bugfix: "bg-red-100 text-red-800 px-2 py-0.5 rounded text-xs font-semibold",
  change: "bg-purple-100 text-purple-800 px-2 py-0.5 rounded text-xs font-semibold",
  deprecated: "bg-yellow-100 text-yellow-800 px-2 py-0.5 rounded text-xs font-semibold",
};
---

<span class={styles[type] || styles.change}>
  {children}
</span>
