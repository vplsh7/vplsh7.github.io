---
// src/pages/glyphmate-changelog.astro
import Glyphmate102 from "../content/changelog/glyphmate/glyphmate-1.0.2.astro";
import Glyphmate101 from "../content/changelog/glyphmate/glyphmate-1.0.1.astro";
import Glyphmate100 from "../content/changelog/glyphmate/glyphmate-1.0.0.astro";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>GlyphMate Changelog — Moose Apps</title>
    <link rel="icon" type="image/png" href="/images/logo_glyphmate.png" />
  </head>

  <body class="bg-gray-50 text-gray-800 font-inter">
    <!-- Header -->
    <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-200">
      <div class="container mx-auto px-6 py-4 flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <img src="/images/logo.png" alt="Moose Apps Logo" class="h-9 w-9" />
          <span class="text-2xl font-bold text-gray-800">Moose Apps<sup class="text-sm text-gray-500">&copy;</sup></span>
        </div>

        <!-- Desktop Menu -->
        <nav class="hidden md:flex items-center space-x-6">
          <a href="/" class="text-gray-600 hover:text-moose-purple transition">Home</a>
          <a href="/moose-antler" class="text-gray-600 hover:text-moose-purple transition">Moose Antler</a>
          <a href="/moose-reader" class="text-gray-600 hover:text-moose-purple transition">Moose Reader</a>
          <a href="/glyphmate" class="text-gray-600 hover:text-moose-purple transition">GlyphMate</a>
          <a href="/#contact" class="text-gray-600 hover:text-moose-purple transition">Contact</a>
        </nav>

        <!-- Mobile Menu Button -->
        <button id="gm-menu-btn" class="md:hidden text-gray-800 focus:outline-none">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>

      <!-- Mobile Menu -->
      <div id="gm-menu" class="hidden md:hidden bg-white border-t border-gray-200 px-6 py-4 space-y-3">
        <a href="/" class="block text-gray-700 hover:text-moose-purple">Home</a>
        <a href="/moose-antler" class="block text-gray-700 hover:text-moose-purple">Moose Antler</a>
        <a href="/moose-reader" class="block text-gray-700 hover:text-moose-purple">Moose Reader</a>
        <a href="/glyphmate" class="block text-gray-700 hover:text-moose-purple">GlyphMate</a>
        <a href="/#contact" class="block text-gray-700 hover:text-moose-purple">Contact</a>
      </div>
    </header>

    <main class="container mx-auto px-6 py-16">
      <h1 class="text-4xl font-bold mb-4">GlyphMate Changelog</h1>
      <p class="text-gray-600 mb-8 max-w-2xl">
        All notable changes to GlyphMate. Newest releases are shown first.
      </p>

      <div class="max-w-3xl mx-auto space-y-6">
        <!-- Newest first -->
        <Glyphmate102 />
        <Glyphmate101 />
        <Glyphmate100 />
      </div>

      <div class="text-center mt-12">
        <a href="/glyphmate" class="inline-block px-6 py-2 rounded-lg bg-teal-600 hover:bg-teal-700 text-white font-semibold transition">
          Back to GlyphMate → 
        </a>
      </div>
    </main>

  <!-- Footer -->
  <footer class="bg-gray-100 border-t">
    <div class="container mx-auto px-6 py-8 text-center text-gray-600">
      <div class="flex items-center justify-center space-x-3 mb-3">
        <img src="/images/logo_glyphmate.png" alt="GlyphMate Logo" class="h-7 w-7" />
        <span class="text-xl font-bold text-gray-700">
          GlyphMate<sup class="text-sm text-gray-500">&copy;</sup>
        </span>
      </div>
      <p>
        Copyright © 2025
        <a href="/index" target="_blank" class="text-teal-600 hover:underline"
          >Moose Apps</a
        >
        & V Shah. All Rights Reserved.
      </p>
      <p class="text-sm mt-2">Built with ❤️ for typography.</p>
    </div>
  </footer>

    <script>
      // mobile menu toggle
      document.getElementById("gm-menu-btn").addEventListener("click", function () {
        document.getElementById("gm-menu").classList.toggle("hidden");
      });
    </script>
  </body>
</html>
