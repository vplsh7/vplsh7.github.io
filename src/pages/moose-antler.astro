---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const changelogAll = await getCollection("changelog");
const antlerChanges = changelogAll
  .filter(c => c.data.app === "antler")
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
---

<BaseLayout title="Moose Antler | Your Ideas, Amplified">
  <!-- Paste your moose-antler.html content here -->

  <section id="changelog" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold">What's New</h2>
      <div class="mt-6 space-y-8">
        {antlerChanges.map(item => (
          <article class="border-l-2 border-gray-200 pl-6">
            <h3 class="text-xl font-semibold">{item.data.version} <span class="text-sm text-gray-500 ml-2">{item.data.date}</span></h3>
            <div class="mt-2" set:html={item.body}></div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
