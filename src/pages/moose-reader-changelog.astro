---
import ReaderChangelog170 from "../content/changelog/reader/reader-1.7.0.astro";
import ReaderChangelog171 from "../content/changelog/reader/reader-1.7.1.astro";
import ReaderChangelog150 from "../content/changelog/reader/reader-1.5.0.astro";
import ReaderChangelog100 from "../content/changelog/reader/reader-1.0.0.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Moose Reader Changelog</title>
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body class="bg-gray-50 text-gray-800 font-inter">

    <!-- ✅ Responsive Header -->
    <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-200">
      <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <img src="/images/logo.png" alt="Moose Reader Logo" class="h-9 w-9" />
          <span class="text-2xl font-bold text-gray-800">Moose Reader<sup class="text-sm text-gray-500">&copy;</sup></span>
        </div>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex items-center space-x-8">
          <a href="/index" class="text-gray-600 hover:text-moose-blue transition">Moose Apps</a>
          <a href="/moose-reader/#features" class="text-gray-600 hover:text-moose-blue transition">Features</a>
          <a href="/moose-reader/#moose-speak" class="text-gray-600 hover:text-moose-blue transition">Moose Speak</a>
          <a href="/moose-reader/#pro" class="text-gray-600 hover:text-moose-blue transition">Pro</a>
          <a href="/moose-reader/#contact" class="text-gray-600 hover:text-moose-blue transition">Contact</a>
        </nav>

        <!-- Mobile Hamburger -->
        <button id="reader-menu-button" class="md:hidden text-gray-800 hover:text-moose-blue focus:outline-none">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 6h16M4 12h16m-7 6h7"/>
          </svg>
        </button>
      </div>

      <!-- Mobile Menu -->
      <div id="reader-menu" class="hidden md:hidden bg-white border-t border-gray-200 px-6 py-4 space-y-3">
        <a href="/index" class="block text-gray-700 hover:text-moose-blue">Moose Apps</a>
        <a href="/moose-reader/#features" class="block text-gray-700 hover:text-moose-blue">Features</a>
        <a href="/moose-reader/#moose-speak" class="block text-gray-700 hover:text-moose-blue">Moose Speak</a>
        <a href="/moose-reader/#pro" class="block text-gray-700 hover:text-moose-blue">Pro</a>
        <a href="/moose-reader/#contact" class="block text-gray-700 hover:text-moose-blue">Contact</a>
      </div>
    </header>

    <!-- ✅ Main Changelog Content -->
    <main class="container mx-auto px-6 py-16">
      <h1 class="text-4xl font-bold mb-6">Moose Reader Changelog</h1>
      <p class="mb-12 text-gray-600">Keep up with all the new features, improvements, and fixes.</p>

      <div class="max-w-3xl mx-auto space-y-8">
        <ReaderChangelog171 />
        <ReaderChangelog170 />
        <ReaderChangelog150 />
        <ReaderChangelog100 />
      </div>
    </main>

    <!-- ✅ Toggle Script -->
    <script>
      document.getElementById("reader-menu-button").addEventListener("click", () => {
        document.getElementById("reader-menu").classList.toggle("hidden");
      });
    </script>
  </body>
</html>
