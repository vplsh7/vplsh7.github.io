---
import AntlerChangelog100 from "../content/changelog/antler/antler-1.0.0.astro";
import AntlerChangelog120 from "../content/changelog/antler/antler-1.2.0.astro";
import AntlerChangelog130 from "../content/changelog/antler/antler-1.3.0.astro";
import AntlerChangelog140 from "../content/changelog/antler/antler-1.4.0.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Moose Antler Changelog</title>
    <link rel="icon" type="image/png" href="/images/logo_antler.png" />
  </head>

    <!-- Header -->
  <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-200">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
      <div class="flex items-center space-x-3">
        <img src="/images/logo.png" alt="Moose Antler Logo" class="h-9 w-9" />
        <span class="text-2xl font-bold text-gray-800">
          Moose Antler<sup class="text-sm text-gray-500">&copy;</sup>
        </span>
      </div>
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/index" class="text-gray-600 hover:text-moose-purple transition">Moose Apps</a>
        <a href="/moose-antler#features" class="text-gray-600 hover:text-moose-purple transition">Features</a>
        <a href="/moose-antler#ai-copilot" class="text-gray-600 hover:text-moose-purple transition">AI Co-Pilot</a>
        <a href="/moose-antler#use-cases" class="text-gray-600 hover:text-moose-purple transition">Use Cases</a>
        <a href="/moose-antler#changelog" class="text-gray-600 hover:text-moose-purple transition">Changelog</a>
        <a href="/moose-antler#contact" class="text-gray-600 hover:text-moose-purple transition">Contact</a>
        <a
          href="https://apps.microsoft.com/detail/9PBMJG25SCJ6"
          target="_blank"
          class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded-lg transition"
        >
          Download
        </a>
      </nav>

      <!-- Mobile Hamburger -->
      <button id="mobile-menu-button" class="md:hidden text-gray-800 hover:text-moose-purple focus:outline-none">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200 px-6 py-4 space-y-3">
      <a href="/index" class="block text-gray-700 hover:text-moose-purple">Moose Apps</a>
      <a href="/moose-antler/#features" class="block text-gray-700 hover:text-moose-purple">Features</a>
      <a href="/moose-antler/#ai-copilot" class="block text-gray-700 hover:text-moose-purple">AI Co-Pilot</a>
      <a href="/moose-antler/#use-cases" class="block text-gray-700 hover:text-moose-purple">Use Cases</a>
      <a href="/moose-antler/#changelog" class="block text-gray-700 hover:text-moose-purple">Changelog</a>
      <a href="/moose-antler/#contact" class="block text-gray-700 hover:text-moose-purple">Contact</a>
      <a href="https://apps.microsoft.com/detail/9PBMJG25SCJ6"
         target="_blank"
         class="block bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded-lg transition">
        Download
      </a>
    </div>
  </header>

  <!-- Small Script -->
  <script>
    const btn = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  </script>

  <body class="bg-gray-50 text-gray-800 font-inter">
    <main class="container mx-auto px-6 py-16">
      <h1 class="text-4xl font-bold mb-6">Moose Antler Changelog</h1>
      <p class="mb-12 text-gray-600">
        Keep up with all the new features, improvements, and fixes.
      </p>
      <div class="max-w-3xl mx-auto space-y-8">
        <AntlerChangelog140 />
        <AntlerChangelog130 />
        <AntlerChangelog120 />
        <AntlerChangelog100 />
      </div>
    </main>
  </body>
</html>







