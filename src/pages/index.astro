---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Moose Apps | Creative Tools for Curious Minds">
  <!-- Paste your index.html main content here -->
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moose Apps | Creative Tools for Curious Minds</title>
    <!-- You can create a main logo for Moose Apps, or reuse one -->
    <link rel="icon" type="image/png" href="images/logo_mooseapps.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        .text-brand-dark { color: #1e293b; }
        .text-brand-blue { color: #3b82f6; }
        .text-brand-purple { color: #8b5cf6; }

        /* Button Colors */
        .bg-brand-blue { background-color: #3b82f6; }
        .bg-moose-purple { background-color: #8b5cf6; }
        .hover\:bg-moose-purple-dark:hover { background-color: #7c3aed; }

        .app-card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05), 0 2px 4px -2px rgb(0 0 0 / 0.05);
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border: 1px solid #e2e8f0;
            overflow: hidden;
        }
        .app-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        }

        .hero-bg {
             background-image: radial-gradient(circle at 50% 30%, #f0f4ff 0%, #f8fafc 50%);
        }
    </style>
</head>
<body class="text-gray-800">

    <!-- Header -->
    <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-200">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-3">
                 <!-- Using the Antler logo as the main one for now -->
                <img src="images/logo_mooseapps.png" alt="Moose Apps Logo" class="h-9 w-9">
                <span class="text-2xl font-bold text-gray-800">Moose Apps<sup class="text-sm text-gray-500">&copy;</sup></span>
            </div>
            <nav class="hidden md:flex items-center space-x-8">
                <a href="#apps" class="text-gray-600 hover:text-brand-dark transition">Our Apps</a>
                <a href="#principles" class="text-gray-600 hover:text-brand-dark transition">Principles</a>
                <a href="#contact" class="text-gray-600 hover:text-brand-dark transition">Contact</a>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <main class="container mx-auto px-6 py-20 md:py-32 text-center hero-bg">
        <h1 class="text-4xl md:text-6xl font-extrabold text-brand-dark leading-tight">
            Creative Tools for Curious Minds.
        </h1>
        <p class="mt-6 text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
            We build simple, beautiful, and powerful desktop applications designed to help you think, create, and learn more effectively.
        </p>
    </main>

    <!-- Apps Section -->
    <section id="apps" class="py-20 bg-white border-t border-b">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold">Our Apps</h2>
                <p class="mt-4 text-lg text-gray-600">Built with care, for your workflow.</p>
            </div>
            <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-10">
                
                <!-- Moose Antler Card -->
                <div class="app-card flex flex-col">
                    <div class="p-8 flex-grow">
                        <img src="images/logo.png" alt="Moose Antler Logo" class="h-12 w-12 mb-4">
                        <h3 class="text-2xl font-bold mb-2">Moose Antler<sup class="text-sm text-gray-500">&copy;</sup></h3>
                        <p class="text-gray-600">A modern mind-mapping tool with a smart AI co-pilot to help you organize thoughts and amplify your ideas.</p>
                    </div>
                    <div class="bg-gray-50 p-6">
                        <a href="moose-antler.html" class="inline-block bg-moose-purple hover:bg-moose-purple-dark text-white font-bold py-2 px-5 rounded-lg transition shadow hover:shadow-md w-full text-center">
                            Learn More
                        </a>
                    </div>
                </div>

                <!-- Moose Reader Card -->
                <div class="app-card flex flex-col">
                    <div class="p-8 flex-grow">
                        <!-- Assuming you have a logo for Moose Reader -->
                        <img src="images/logo_reader.png" alt="Moose Reader Logo" class="h-12 w-12 mb-4" onerror="this.src='https://placehold.co/48x48/dbeafe/3b82f6?text=MR'">
                        <h3 class="text-2xl font-bold mb-2">Moose Reader<sup class="text-sm text-gray-500">&copy;</sup></h3>
                        <p class="text-gray-600">A simple, powerful, and elegant RSS reader for your desktop, providing a clean, distraction-free reading experience.</p>
                    </div>
                    <div class="bg-gray-50 p-6">
                         <a href="https://moosereaderapp.com/" class="inline-block bg-brand-blue hover:bg-blue-600 text-white font-bold py-2 px-5 rounded-lg transition shadow hover:shadow-md w-full text-center">
                            Learn More
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </section>
    
    <!-- Core Principles Section -->
    <section id="principles" class="py-24">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold">Our Core Principles</h2>
                <p class="mt-4 text-lg text-gray-600">What we believe makes great software.</p>
            </div>
            <div class="max-w-5xl mx-auto grid md:grid-cols-3 gap-12 text-center">
                <!-- Principle 1: Private & Secure -->
                <div>
                    <div class="flex items-center justify-center h-16 w-16 bg-indigo-100 rounded-full mx-auto">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mt-6 mb-2">Private & Secure</h3>
                    <p class="text-gray-600">Your data is yours. Our apps work locally on your machine, with no cloud accounts required and no tracking.</p>
                </div>
                <!-- Principle 2: Clean & Focused -->
                <div>
                     <div class="flex items-center justify-center h-16 w-16 bg-indigo-100 rounded-full mx-auto">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mt-6 mb-2">Clean & Focused Design</h3>
                    <p class="text-gray-600">We prioritize a distraction-free experience with intuitive interfaces that get out of your way and let you focus.</p>
                </div>
                <!-- Principle 3: Powerful & Efficient -->
                <div>
                     <div class="flex items-center justify-center h-16 w-16 bg-indigo-100 rounded-full mx-auto">
                       <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mt-6 mb-2">Powerful & Efficient</h3>
                    <p class="text-gray-600">We build native desktop apps that are fast, reliable, and packed with the features you actually need, without the bloat.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-white border-t">
        <div class="container mx-auto px-6 text-center max-w-3xl">
            <h2 class="text-3xl md:text-4xl font-bold">Get in Touch</h2>
            <p class="mt-4 text-lg text-gray-600 mb-6">Have a question or feedback? We'd love to hear from you.</p>
            <a href="mailto:support@mooseapps.io" class="text-brand-blue font-semibold hover:underline text-xl">support@mooseapps.io</a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-100 border-t">
        <div class="container mx-auto px-6 py-8 text-center text-gray-600">
            <p>Copyright © 2025 <a href="https://mooseapps.io" target="_blank" class="text-moose-purple hover:underline">Moose Apps</a> & V Shah. All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
  <!-- Paste your index.html main content here -->
</BaseLayout>

