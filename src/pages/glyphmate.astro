---
import BaseLayout from "../layouts/BaseLayout.astro";
import GlyphmateChangelog102 from "../content/changelog/glyphmate/glyphmate-1.0.2.astro";
---

<BaseLayout
  title="GlyphMate | Your Smart Companion for Perfect Font Pairings"
  favicon="/images/logo_glyphmate.png"
>
  <!-- Header -->
  <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-gray-200">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
      <div class="flex items-center space-x-3">
        <img
          src="/images/logo_glyphmate.png"
          alt="GlyphMate Logo"
          class="h-9 w-9"
        />
        <span class="text-2xl font-bold text-gray-800">
          GlyphMate<sup class="text-sm text-gray-500">&copy;</sup>
        </span>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/index" class="text-gray-600 hover:text-teal-600 transition"
          >Moose Apps</a
        >
        <a href="#features" class="text-gray-600 hover:text-teal-600 transition"
          >Features</a
        >
        <a href="#screenshots" class="text-gray-600 hover:text-teal-600 transition"
          >Screenshots</a
        >
        <a href="#changelog" class="text-gray-600 hover:text-teal-600 transition"
          >Changelog</a
        >
        <a href="#contact" class="text-gray-600 hover:text-teal-600 transition"
          >Contact</a
        >
        <a
          href="https://github.com/vplsh7/glyphmate_releases"
          target="_blank"
          class="bg-teal-50 hover:bg-teal-100 text-teal-700 font-semibold py-2 px-4 rounded-lg transition"
          >Download</a
        >
      </nav>

      <!-- Mobile Hamburger -->
      <button
        id="glyphmate-menu-button"
        class="md:hidden text-gray-800 hover:text-teal-600 focus:outline-none"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      id="glyphmate-menu"
      class="hidden md:hidden bg-white border-t border-gray-200 px-6 py-4 space-y-3"
    >
      <a href="/index" class="block text-gray-700 hover:text-teal-600">Moose Apps</a>
      <a href="#features" class="block text-gray-700 hover:text-teal-600">Features</a>
      <a href="#screenshots" class="block text-gray-700 hover:text-teal-600"
        >Screenshots</a
      >
      <a href="#changelog" class="block text-gray-700 hover:text-teal-600">Changelog</a>
      <a href="#contact" class="block text-gray-700 hover:text-teal-600">Contact</a>
      <a
        href="https://github.com/vplsh7/glyphmate_releases"
        target="_blank"
        class="block py-2 px-4 text-sm text-teal-700 hover:bg-teal-50 rounded-lg"
        >Download</a
      >
    </div>
  </header>

  <!-- Mobile Menu Script -->
  <script>
    document
      .getElementById("glyphmate-menu-button")
      .addEventListener("click", () => {
        document.getElementById("glyphmate-menu").classList.toggle("hidden");
      });
  </script>

  <!-- Hero Section -->
  <main class="container mx-auto px-6 py-20 md:py-28 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 leading-tight">
      Your Smart Companion for
      <span class="text-teal-600">Perfect Font Pairings.</span>
    </h1>
    <p class="mt-6 text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
      Compare, pair, and export fonts like a pro — all in one beautiful,
      cross-platform desktop app.
    </p>
    <div
      class="mt-10 flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-4"
    >
      <a
        href="https://github.com/vplsh7/glyphmate_releases"
        target="_blank"
        class="w-full sm:w-auto bg-teal-600 hover:bg-teal-700 text-white font-bold py-3 px-8 rounded-lg text-lg transition shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center justify-center space-x-2"
      >
        <img
          src="/images/github-mark-white.png"
          class="h-6 w-6"
          alt="GitHub Logo"
        />
        <span>Download from GitHub</span>
      </a>
    </div>
    <div class="mt-16">
      <img
        src="/images/glyphmate_main.png"
        alt="GlyphMate Main Interface"
        class="mx-auto rounded-xl shadow-xl border border-gray-200"
        onerror="this.onerror=null;this.src='https://placehold.co/1200x700/ccfbf1/14b8a6?text=GlyphMate+Main+Interface';"
      />
    </div>
  </main>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold">Powerful Font Management</h2>
        <p class="mt-4 text-lg text-gray-600">
          From comparison to specimen export — everything you need in one tool.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="feature-card bg-white border rounded-xl p-6 shadow hover:shadow-md">
          <h3 class="text-xl font-semibold text-teal-600 mb-2">
            Side-by-Side Comparison
          </h3>
          <p class="text-gray-600">
            Compare any two fonts from your local machine or Google Fonts with
            adjustable live preview.
          </p>
        </div>
        <div class="feature-card bg-white border rounded-xl p-6 shadow hover:shadow-md">
          <h3 class="text-xl font-semibold text-teal-600 mb-2">PDF Export</h3>
          <p class="text-gray-600">
            Create professional specimen sheets with custom text and templates in
            portrait or landscape.
          </p>
        </div>
        <div class="feature-card bg-white border rounded-xl p-6 shadow hover:shadow-md">
          <h3 class="text-xl font-semibold text-teal-600 mb-2">
            Unified Font Library
          </h3>
          <p class="text-gray-600">
            All local and Google Fonts in one searchable dropdown, neatly grouped.
          </p>
        </div>
        <div class="feature-card bg-white border rounded-xl p-6 shadow hover:shadow-md">
          <h3 class="text-xl font-semibold text-teal-600 mb-2">Live Previews</h3>
          <p class="text-gray-600">
            Adjust text, size, and font instantly to see how your combinations
            really feel in context.
          </p>
        </div>
        <div class="feature-card bg-white border rounded-xl p-6 shadow hover:shadow-md">
          <h3 class="text-xl font-semibold text-teal-600 mb-2">Light & Dark Mode</h3>
          <p class="text-gray-600">
            Switch effortlessly between light and dark themes with saved
            preferences.
          </p>
        </div>
        <div class="feature-card bg-white border rounded-xl p-6 shadow hover:shadow-md">
          <h3 class="text-xl font-semibold text-teal-600 mb-2">Cross Platform & Portable</h3>
          <p class="text-gray-600">
            Cross-platform app with portable installers available for Windows & Linux. 
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Changelog Section -->
  <section id="changelog" class="py-20 bg-gray-50">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold mb-6">What's New</h2>
      <p class="mt-2 text-lg text-gray-600">
        See the latest improvements and updates to GlyphMate.
      </p>
    </div>
    <div class="max-w-3xl mx-auto space-y-8">
        <GlyphmateChangelog102 />
      </div>
      <div class="text-center mt-8">
        <a href="/glyphmate-changelog" class="inline-block bg-teal-600 hover:bg-teal-700 text-white font-semibold py-2 px-6 rounded-lg transition">
          View Full Changelog →
        </a>
      </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-white border-t">
    <div class="container mx-auto px-6 text-center max-w-3xl">
      <h2 class="text-3xl md:text-4xl font-bold">Get in Touch</h2>
      <p class="mt-4 text-lg text-gray-600 mb-6">
        Have feedback, bug reports, or feature suggestions? We'd love to hear
        from you.
      </p>
      <a
        href="mailto:support@mooseapps.io"
        class="text-teal-600 font-semibold hover:underline text-xl"
        >support@mooseapps.io</a
      >
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-100 border-t">
    <div class="container mx-auto px-6 py-8 text-center text-gray-600">
      <div class="flex items-center justify-center space-x-3 mb-3">
        <img src="/images/logo_glyphmate.png" alt="GlyphMate Logo" class="h-7 w-7" />
        <span class="text-xl font-bold text-gray-700">
          GlyphMate<sup class="text-sm text-gray-500">&copy;</sup>
        </span>
      </div>
      <p>
        Copyright © 2025
        <a href="/index" target="_blank" class="text-teal-600 hover:underline"
          >Moose Apps</a
        >
        & V Shah. All Rights Reserved.
      </p>
      <p class="text-sm mt-2">Built with ❤️ for typography.</p>
    </div>
  </footer>
</BaseLayout>
